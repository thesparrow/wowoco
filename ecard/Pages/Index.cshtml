@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}



<div class="ecard">
	<div class="row container mx-auto">
		<div class="col-sm-7">
			<div class="row container">
				<div class="col"><img src="~/images/card_anniversary.png" class="img-fluid d-block anniversary" /></div>
				<div class="col"><img src="~/images/card_babyshower.png" class="img-fluid d-block baby" /></div>
				<div class="col"><img src="~/images/card_birthday.png" class="img-fluid d-block birthday" /></div>
				<div class="col"><img src="~/images/card_valentines.png" class="img-fluid d-block valentines" /></div>
			</div>
			<div class="row container">
				<div class="col"><img src="~/images/card_frame_black.png" class="img-fluid d-block blackframe" /></div>
				<div class="col"><img src="~/images/card_frame_gold.png" class="img-fluid d-block goldframe" /></div>
				<div class="col"><img src="~/images/card_frame_wood.png" class="img-fluid d-block woodframe" /></div>
			</div>
		</div>
		<div class="col-sm-5">
			<div class="row container mx-auto">
				<div id="myCarousel" class="carousel slide mx-auto" style="overflow:hidden" data-ride="carousel">
					<!-- Indicators -->
					<ul class="carousel-indicators">
						<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
						<li data-target="#myCarousel" data-slide-to="1"></li>
						<li data-target="#myCarousel" data-slide-to="2"></li>
						<li data-target="#myCarousel" data-slide-to="3"></li>
						<li data-target="#myCarousel" data-slide-to="4"></li>
						<li data-target="#myCarousel" data-slide-to="5"></li>
						<li data-target="#myCarousel" data-slide-to="6"></li>
					</ul>

					<!-- Wrapper for slides -->
					<a href="" class="carousel-inner" target="_blank">
						<div class="carousel-item active">
							<img src="~/images/card_anniversary.png" class="img-fluid center-block anniversary" />
						</div>

						<div class="carousel-item">
							<img src="~/images/card_babyshower.png" class="img-fluid d-block baby" />
						</div>
						<div class="carousel-item">
							<img src="~/images/card_birthday.png" class="img-fluid d-block birthday" />
						</div>
						<div class="carousel-item">
							<img src="~/images/card_valentines.png" class="img-fluid d-block valentines" />
						</div>
						<div class="carousel-item">
							<img src="~/images/card_frame_black.png" class="img-fluid d-block blackframe" />
						</div>
						<div class="carousel-item">
							<img src="~/images/card_frame_gold.png" class="img-fluid d-block goldframe" />
						</div>
						<div class="carousel-item">
							<img src="~/images/card_frame_wood.png" class="img-fluid d-block woodframe" />
						</div>
					</a>

					<!-- Left and right controls -->
					<a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
						<span class="glyphicon glyphicon-chevron-left"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#myCarousel" data-slide="next">
						<span class="glyphicon glyphicon-chevron-right"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>


