@page
@model QuestionnaireModel
@{
	ViewBag.meta_title = "Questionnaire";
	ViewBag.meta_keywords = "";
	ViewBag.meta_desc = "";
	ViewBag.theme = "questionnaire";
}

<div class="container questionnaire2">

	<h1>
		<i class="fa fa-music"></i>
		Getting to Know You
		<i class="fa fa-music"></i>
	</h1>

	<form method="post">
		<div class="row">
			<div class="form-group col-6">
				<label asp-for="@Model._myFavorites.sendername"></label>
				<input asp-for="@Model._myFavorites.sendername" type="text" class="form-control" />
				<span asp-validation-for="@Model._myFavorites.sendername" class="text-danger"></span>
			</div>
			<div class="form-group col-6	">
				<label asp-for="@Model._myFavorites.senderemail"></label>
				<input asp-for="@Model._myFavorites.senderemail" type="email" class="form-control" />
				<span asp-validation-for="@Model._myFavorites.senderemail" class="text-danger"></span>
			</div>
			<div class="form-group col-6">
				<label asp-for="@Model._myFavorites.movie"></label>
				<input asp-for="@Model._myFavorites.movie" type="text" class="form-control" />
				<span asp-validation-for="@Model._myFavorites.movie" class="text-danger"></span>
			</div>
			<div class="form-group col-6">
				<label asp-for="@Model._myFavorites.restaurant"></label>
				<input asp-for="@Model._myFavorites.restaurant" type="text" class="form-control" />
				<span asp-validation-for="@Model._myFavorites.restaurant" class="text-danger"></span>
			</div>

			<div class="form-group col-6">
				<label asp-for="@Model._myFavorites.holiday"></label>
				<input asp-for="@Model._myFavorites.holiday" type="text" class="form-control" />
				<span asp-validation-for="@Model._myFavorites.holiday" class="text-danger"></span>
			</div>
			<div class="form-group col-6">
				<label asp-for="@Model._myFavorites.color"></label>
				<input asp-for="@Model._myFavorites.color" type="text" class="form-control" />
				<span asp-validation-for="@Model._myFavorites.color" class="text-danger"></span>
			</div>
			<div class="form-group col-6">
				<label asp-for="@Model._myFavorites.birthday"></label>
				<input asp-for="@Model._myFavorites.birthday" type="text" class="form-control" />
				<span asp-validation-for="@Model._myFavorites.birthday" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-10">
				<div class="g-recaptcha float-right" data-sitekey="6LeM_i0UAAAAACyV8wOooe4mV3_XHbcl-hMjtnrM"></div>
			</div>
			<div class="form-group col-1">
				<input type="submit" value="Submit" class="btn btn-primary float-right" />
			</div>
		</div>
	</form>


	<!-- Begin: Preferred Form Formats -->
	<form>
		<label asp-for="@Model._myFavorites.restaurant"></label>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">Rock & Brews
			</label>
		</div>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">Sausal
			</label>
		</div>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">Good Stuff
			</label>
		</div>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">Petros
			</label>
		</div>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">El Tarasco
			</label>
		</div>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">B.A.D. Sushi
			</label>
		</div>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">Britt's BBQ
			</label>
		</div>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">Brew Port Tap House
			</label>
		</div>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">El Gringo
			</label>
		</div>
		<div class="form-check form-check-inline">
			<label class="form-check-label">
				<input type="checkbox" class="form-check-input" value="">Beach Mex
			</label>
		</div>

		<div class="row">
			<p class="form-group col-6">
				<label asp-for="@Model._myFavorites.holiday"></label>
				<select asp-for="@Model._myFavorites.holiday" class="form-control">
					<option value="" class="invisible">Select One</option>
					<option>New Year's Eve</option>
					<option>Valentine's Day</option>
					<option>St. Patrick's Day</option>
					<option>Easter</option>
					<option>Independence Day</option>
					<option>Halloween</option>
					<option>Thanksgiving</option>
					<option>Christmas</option>
				</select>
			</p>
		</div>
		<div class="row">
			<p class="form-group col-6">
				<label asp-for="@Model._myFavorites.birthdaymonth"></label>
				<select id="month" name="month">
					<option value="" class="disable">Month</option>
					<option>January</option>
					<option>February</option>
					<option>March</option>
					<option>April</option>
					<option>May</option>
					<option>June</option>
					<option>July</option>
					<option>August</option>
					<option>September</option>
					<option>October</option>
					<option>November</option>
					<option>December</option>
				</select>
				<label asp-for="@Model._myFavorites.birthdayday"></label>
				<select id="day" name="day">
					<option class="invisible"></option>
					<option>1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
					<option>5</option>
					<option>6</option>
					<option>7</option>
					<option>8</option>
					<option>9</option>
					<option>10</option>
					<option>11</option>
					<option>12</option>
					<option>13</option>
					<option>14</option>
					<option>15</option>
					<option>16</option>
					<option>17</option>
					<option>18</option>
					<option>19</option>
					<option>20</option>
					<option>21</option>
					<option>22</option>
					<option>23</option>
					<option>24</option>
					<option>25</option>
					<option>26</option>
					<option>27</option>
					<option>28</option>
					<option>29</option>
					<option>30</option>
					<option>31</option>
				</select>
			</p>

			@*<p class="form-group d-block col-6">
					<label>What is your favorite color?</label>
					<input type="color" id="example-color-input">
				</p>*@

			<p class="form-group d-block col-6">
				<label asp-for="@Model._myFavorites.color"></label>
				<input type="color" asp-for="@Model._myFavorites.color">
			</p>
		</div>
	</form>
	<!-- End: Preferred Forms Formats-->
</div>

@section scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

	<!-- BEGIN: TEXTAREA AUTOSIZE -->
	<script src="~/lib/textarea-autosize/dist/jquery.textarea_autosize.js"></script>
	<script>
		$('textarea').textareaAutoSize();
	</script>
	<!-- END: TEXTAREA AUTOSIZE -->

	<script src="~/lib/textarea-countdown.js"></script>

	<script src='https://www.google.com/recaptcha/api.js'></script>
}


